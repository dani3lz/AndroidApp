#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "img/background/background.jpg"
            Rectangle:
                size: self.width, 242
                pos: self.pos[0], self.pos[1] + 500
                texture: self.city_texture
            Rectangle:
                size: self.width, 500
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture
    Label:
        font_name: "fonts/ScoreRegular.ttf"
        id: score
        size_hint_y: None
        height: (root.height*2) - 400
        text: "0"
        font_size: 300
        color: 1,1,1,1
    Button:
        font_name: "fonts/TextRegular.ttf"
        text: "Play"
        font_size: 300
        background_normal: "img/button/null.png"
        background_down: "img/button/null.png"
        id: start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()
    Label:
        font_name: "fonts/TextRegular.ttf"
        id: high_score_text
        size_hint_y: None
        size_hint_x: None
        width: root.width - 450
        height: root.height - 450
        text: "Highscore "
        font_size: 150
        color: 1,1,1,1
    Label:
        font_name: "fonts/ScoreRegular.ttf"
        id: high_score
        size_hint_y: None
        size_hint_x: None
        width: root.width + 450
        height: root.height - 450
        text: app.check_score_init()
        font_size: 150
        color: 1,1,1,1
    Player:
        id: player
        source: "img/body/body_normal.png"
        size_hint: None, None
        size: 104, 76
        pos: 100, (root.height + 500) / 2.0




